<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👨‍⚕️ Dashboard Dokter"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#00796B"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Greeting -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang! 👋"
            android:textSize="16sp"
            android:textColor="#424242"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- ========== STATISTIK CARDS - FIXED ========== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Statistik Hari Ini"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="28dp">

            <!-- ✅ Total Pasien Hari Ini - FIXED -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👥"
                        android:textSize="28sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_total_patients_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Pasien"
                        android:textSize="10sp"
                        android:textColor="#616161"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ✅ Antrian Aktif - FIXED -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏱️"
                        android:textSize="28sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_active_queue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#F57C00"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menunggu"
                        android:textSize="10sp"
                        android:textColor="#616161"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ✅ Selesai Hari Ini - FIXED -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✅"
                        android:textSize="28sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_completed_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#388E3C"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textSize="10sp"
                        android:textColor="#616161"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- ========== QUICK ACTIONS ========== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚡ Quick Actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnViewQueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 LIHAT ANTRIAN PASIEN HARI INI"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnPatientHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📂 RIWAYAT PASIEN"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnUpdateStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ ATUR STATUS PRAKTEK"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="28dp"
            android:padding="12dp" />

        <!-- ========== PASIEN YANG MENUNGGU ========== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋 Pasien yang Menunggu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp">

                <TextView
                    android:id="@+id/tv_recent_patients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:fontFamily="monospace" />

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Struk Antrian"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_queue_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Antrian: 15"
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- QR Code Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:contentDescription="QR Code Struk"
            android:padding="16dp"
            android:background="@android:color/white"
            android:scaleType="fitCenter" />

    </androidx.cardview.widget.CardView>

    <!-- Info Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tunjukkan QR Code ini ke petugas\natau download sebagai PDF"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Download PDF Button -->
        <Button
            android:id="@+id/btn_download_pdf"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="#4CAF50"
            android:text="ðŸ“„ Download PDF"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Close Button -->
        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_outline"
            android:text="Tutup"
            android:textColor="#2196F3"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>

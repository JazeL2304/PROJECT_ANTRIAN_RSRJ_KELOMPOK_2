<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_primary">

    <!-- Pesan jika belum ada data riwayat -->
    <TextView
        android:id="@+id/tvEmptyHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum ada pasien yang diselesaikan."
        android:textAlignment="center"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Daftar Riwayat Pasien -->
    <ListView
        android:id="@+id/listDoctorPatientHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/divider_gray"
        android:dividerHeight="1dp"
        android:background="@color/bg_secondary"
        android:padding="4dp" />

    <!-- Tombol Tambah Riwayat -->
    <Button
        android:id="@+id/btnAddHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Riwayat Baru"
        android:backgroundTint="@color/primary_button"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textStyle="bold"
        android:elevation="2dp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏥 Dashboard Admin"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="28dp" />

        <!-- Tombol Kelola Dokter -->
        <Button
            android:id="@+id/btnManageDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👨‍⚕️ Kelola Dokter"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Tombol Kelola Pasien -->
        <Button
            android:id="@+id/btnManagePatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧍‍♀️ Kelola Pasien"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Tombol Kelola Jadwal -->
        <Button
            android:id="@+id/btnManageSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📅 Kelola Jadwal Dokter"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Tombol Lihat Laporan -->
        <Button
            android:id="@+id/btnViewReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Lihat Laporan Rumah Sakit"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>

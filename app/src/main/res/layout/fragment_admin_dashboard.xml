<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏥 Dashboard Admin"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#00796B"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- ← TAMBAHAN GREETING BARU! -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang! 👋"
            android:textSize="16sp"
            android:textColor="#424242"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- ========== STATISTIK CARDS ========== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Statistik"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="28dp">

            <!-- Card: Total Pasien -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👥"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tv_total_patients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pasien"
                        android:textSize="12sp"
                        android:textColor="#616161"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Total Dokter -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👨‍⚕️"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tv_total_doctors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#388E3C"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Dokter"
                        android:textSize="12sp"
                        android:textColor="#616161"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Booking Hari Ini -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📅"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tv_today_bookings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#F57C00"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking Hari Ini"
                        android:textSize="12sp"
                        android:textColor="#616161"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Antrian Aktif -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#FCE4EC"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏱️"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/tv_active_queues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#C2185B"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antrian Aktif"
                        android:textSize="12sp"
                        android:textColor="#616161"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- ========== QUICK ACTIONS ========== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚡ Quick Actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <!-- Tombol Kelola Dokter -->
        <Button
            android:id="@+id/btnManageDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👨‍⚕️ Kelola Dokter"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <!-- Tombol Kelola Pasien -->
        <Button
            android:id="@+id/btnManagePatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧍‍♀️ Kelola Pasien"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <!-- Tombol Kelola Jadwal -->
        <Button
            android:id="@+id/btnManageSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📅 Kelola Jadwal Dokter"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <!-- Tombol Lihat Laporan -->
        <Button
            android:id="@+id/btnViewReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Lihat Laporan Rumah Sakit"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="28dp"
            android:padding="12dp" />

        <!-- ========== AKTIVITAS TERBARU ========== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋 Aktivitas Terbaru"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp">

                <TextView
                    android:id="@+id/tv_recent_bookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:fontFamily="monospace" />

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚙️ Pengaturan Admin"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#00796B"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Data Management Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💾 Data dan Penyimpanan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnBackupData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💾 Backup Data"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnClearCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗑️ Hapus Cache"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="28dp"
            android:padding="12dp" />

        <!-- About Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ℹ️ Informasi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ℹ️ Tentang Aplikasi"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="28dp"
            android:padding="12dp" />

        <!-- App Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Antrian RS Raja Jaya v1.0.0"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</ScrollView>

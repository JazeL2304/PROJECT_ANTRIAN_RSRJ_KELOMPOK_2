<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.PROJECT_ANTRIAN_RSRJ_KELOMPOK_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color used by the app -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:enforceNavigationBarContrast">true</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.PROJECT_ANTRIAN_RSRJ_KELOMPOK_2" parent="Base.Theme.PROJECT_ANTRIAN_RSRJ_KELOMPOK_2" />

    <!-- Splash Screen Theme -->
    <style name="Theme.PROJECT_ANTRIAN_RSRJ_KELOMPOK_2.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/purple_500</item>
    </style>

    <!-- No Action Bar Theme for Fragments -->
    <style name="Theme.PROJECT_ANTRIAN_RSRJ_KELOMPOK_2.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Text Styles -->
    <style name="HeadingLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="HeadingMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
